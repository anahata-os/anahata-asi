                    <homePageUrl>https://anahata.uno</homePageUrl>
                    <codeNameBase>uno.anahata.asi</codeNameBase>
                    <brandingToken>anahata</brandingToken>
                    <moduleIcon>src/main/resources/icons/anahata_32.png</moduleIcon>
                    <includeRuntimeModuleLibraries>true</includeRuntimeModuleLibraries>
                    <moduleDependencies>
                        <dependency>
                            <type>spec</type>
                            <id>org.netbeans.api:org-netbeans-modules-versioning</id>
                        </dependency>
                        <dependency>
                            <type>impl</type>
